   <children>
      <Label fx:id="welcomeTitle" layoutX="173.0" layoutY="31.0" text="Hi Player!">
         <font>
            <Font size="48.0" />
         </font>
      </Label>
      <Label fx:id="playerAttributesLabel" layoutX="48.0" layoutY="101.0" prefHeight="90.0" prefWidth="509.0" text="You have 100HP points and 75 of accuracy to Start your story!">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <Label fx:id="chooseTownLabel" layoutX="75.0" layoutY="191.0" prefHeight="27.0" prefWidth="454.0" text="Choose the aspects of the town you want to be born in:">
